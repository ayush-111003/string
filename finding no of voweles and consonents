#include<bits/stdc++.h>
using namespace std;

int main()
{   //finding no of voweles and consonents
    char A[] = "How are you\0";
    
    int i , vcount  = 0 , ccount = 0;
    for ( i = 0; A[i] != '\0'; i++)
    {
        if(A[i]=='a'||A[i]=='e'||A[i]=='i'||A[i]=='o'||A[i]=='u'||A[i]=='A'||A[i]=='E'||A[i]=='I'||A[i]=='O'||A[i]=='U')
            vcount++;
        else if ((A[i] >='A' && A[i] <='Z') || (A[i] >='a' && A[i] <='z'))
            ccount++;
    }
    cout<<A<<endl;
    cout<<vcount<<endl;
    cout<<ccount<<endl;
    return 0 ;
}
