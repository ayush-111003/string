#include<bits/stdc++.h>
using namespace std;

int main()
{   //finding no of words
    char A[] = "How are you\0";
    
    int i , words = 0;
    
    
    for ( i = 0; A[i] != '\0'; i++)
    {
        if(A[i]==' ' && A[i-1]!=' ')
            words++;
    }
     
    cout<<A<<endl;
    cout<<words+1<<endl;
    
    return 0 ;
}
