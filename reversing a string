#include<bits/stdc++.h>
using namespace std;

//reversing a string

int main()
{ //****************************method 1********************************
    char A[] = "python";
    char t;
    int i,j;
    for ( j = 0; A[j] != '\0'; j++)
    {
    }
    j = j -1;
    for ( i = 0; i < j; i++,j--)
    {
        t=A[j];
        A[j]=A[i];
        A[i]=t;
    }
    cout<<A;
//****************************method 2********************************
    char A[] = "python";
    char B[7];
    int i , j;
    for ( i = 0; A[i] != '\0'; i++)
    {
    }
    i=i-1;
    for ( j = 0; i>=0; j++,i--)
    {
        B[j] = A[i];
    }
    B[j] = '\0';
    cout<<B;
    
    return 0;
}
